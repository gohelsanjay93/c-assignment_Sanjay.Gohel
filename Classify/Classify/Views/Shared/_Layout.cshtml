<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Classify</title>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,500,700,600,800,900,300' rel='stylesheet' type='text/css'>
    <link rel="shortcut icon" href="~images/favicon.ico" type="image/x-icon" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-theme.css">
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.css">
    <link rel="stylesheet" type="text/css" href="~/Content/default.css">
    <link rel="stylesheet" type="text/css" href="~/Content/responsive.css">
    <link rel="stylesheet" type="text/css" href="~/Content/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/Content/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="~/Content/layerslider/css/layerslider.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js" integrity="sha256-KsRuvuRtUVvobe66OFtOQfjP8WA2SzYsmm4VPfMnxms=" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!--Start Header section-->
    <section id="header">
        <header>
            <div class="menu-bar">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="logo">
                                <a href="/Home/index"><img src="~/images/logo.png" alt="classify"></a>
                            </div>
                        </div>
                        <div class="col-sm-9">
                            <nav role="navigation" class="navbar navbar-default">
                                <!-- Brand and toggle get grouped for better mobile display -->
                                <div class="navbar-header">
                                    <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>
                                <!-- Collection of nav links and other content for toggling -->
                                <div id="navbarCollapse" class="collapse navbar-collapse">
                                    <ul class="nav navbar-nav navbar-right">
                                        <li class="active dropdown">
                                            <a class="dropdown-toggle" href="/Home/index">Home</a>
                                        </li>
                                        @if (Session["UserId"] != null)
                                        {
                                            <li> <a href="/User/UserProfile">Welcome <span class="text-primary"> <i class="fa fa-user"></i> @Session["Name"].ToString() </span></a></li>
                                            <li><a href="/Home/Create">Post an Ad</a></li>
                                            <li><a href="/User/LogOut">Logout</a></li>
                                        }
                                        else
                                        {
                                            <li><a href="/User/Register">Register <i class="fa fa-"></i></a></li>
                                            <li><a href="/User/Login">Login</a></li>
                                        }
                                    </ul>
                                </div>
                            </nav><!--end nav-->
                        </div>
                    </div>
                </div>
            </div><!--end menu-bar-->
        </header>
    </section><!--End Header section-->

    @RenderBody()

    <section id="footer">
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="copyright text-center">
                            <p> &copy;All Copyrights Reseverd 2014 - Design & Development by Sanjay Gohel</p>
                        </div>
                    </div>
                </div>
            </div>
            <a href="#" class="back-to-top"><i class="fa fa-angle-up"></i></a>
        </footer>
    </section>
    <!--End Footer-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/owl.carousel.js"></script>
    <script src="~/Scripts/default.js"></script>
    <script src="~/Content/layerslider/js/greensock.js"></script>
    <script src="~/Content/layerslider/js/layerslider.kreaturamedia.jquery.js"></script>
    <script src="~/Content/layerslider/js/layerslider.transitions.js"></script>
    <script src="~/Scripts/Index.js"></script>    
</body>
</html>
